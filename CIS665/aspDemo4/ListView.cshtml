@model IEnumerable<Product>
@{
    ViewData["Title"] = "List View";
}

<h1>Tara Store</h1>

@foreach (var p in Model)
{
    <div class="card border-primary m-1 p-1">
        <div class="bg-light p-1">
            <h4>
                @p.ModelName
                <span style="float:right">
                    <img src="https://cisweb.biz.colostate.edu/leov/aspcore/images/productthumbnails/@p.Thumbnail" height="100" width="100" />
                    @*if the images are stored under wwwroot/images, a relative src could be provided as follows:
                        <img src="~/images/@p.Thumbnail" />*@
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            @p.Description
            <span class="badge badge-pill badge-primary" style="float:right">
                @p.UnitCost.ToString("c")
            </span>
        </div>
    </div>
}

