@*Demo 5 - CRUD Basics; LV*@

@model Demo5.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Tara Store - Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <hr />
    <dl class="row">
        @*Replaced column names as needed*@
        <dt class="col-sm-2">
           Model Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelNumber)
        </dd>
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelName)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="https://cisweb.biz.colostate.edu/leov/aspcore/images/productpics/@Model.ProductImage" height="100" width="100" alt="@Model.ModelName" />
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.UnitCost.ToString("c")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thumbnail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thumbnail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Availability)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @*had to correct column here*@
            @Html.DisplayFor(model => model.CategoryFkNavigation.CategoryName)
        </dd>
        <dt class="col-sm-2">
            Subcategory
        </dt>
        <dd class="col-sm-10">
            @*had to correct column here*@
            @Html.DisplayFor(model => model.SubCategoryFkNavigation.SubCategoryName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductPk" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel - Back to Product List</a>
    </form>
</div>
