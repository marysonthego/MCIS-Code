@*Demo 5 - CRUD Basics; LV*@

@model IEnumerable<Demo5.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Tara Store - Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*html helpers generate html elements using the model class*@
            @*removed a few columns; changed column names*@
            <th>
                Product
            </th>
            <th class="text-right">
                Price
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                Category
            </th>
            <th>
                SubCategory
            </th>
            <th>
                Image
            </th>
            @*added a column here*@
            <th colspan="2" class="text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* removed a few columns; modified the display of certain columns*@

                @* set-up product name as a link*@

                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductPk">@item.ModelName</a>
                </td>
                <td class="text-right">
                    
                 @* formatted price*@

                    @item.UnitCost.ToString("c")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CategoryFkNavigation.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoryFkNavigation.SubCategoryName)
                </td>
                <td>
                    <img src="https://cisweb.biz.colostate.edu/leov/aspcore/images/productthumbnails/@item.Thumbnail" height="100" width="100" alt="@item.ModelName" />
                </td>
                <td>
                    @*changed code here*@

                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-id="@item.ProductPk">Edit</a>
                </td>
                <td>
                    @*removed the details link here*@

                    <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.ProductPk">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
