<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>
<!-- The include calls receive a path relative to the template. So,
since the path of header.ejs is in ./views/layouts/header.ejs and
index.ejs is in ./views/index.ejs, we specify include('layouts/header').
-->
<body>

<%- include('layouts/navbar'); -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>OneBrick</h1>
            <span class="subheading">The OneBrick Blog</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
          <% for (var i = blogposts.length-1; i > -1 ; i--) { %>
        <div class="post-preview">
          <a href="/post/<%= blogposts[i]._id %>">
            <h2 class="post-title">
              <%= blogposts[i].title %>
            </h2>
            <h3 class="post-subtitle">
               <%= blogposts[i].subheading %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#"><%= blogposts[i].username %></a>
            on <%= blogposts[i].dateposted.toDateString() %></p>
        </div>
        <hr>
        <% } %>
          <!-- Pager -->
         <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
      </div>
    </div>
  </div>
  <hr>
<%- include('layouts/footer'); -%>
<%- include('layouts/scripts'); -%>
</body>
</html>
