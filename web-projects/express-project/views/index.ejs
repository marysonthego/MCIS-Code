<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <% include templates/header.ejs %>
    <p>Welcome to the <%= title %>! You have <%= points %> points!</p>

    <form action="" method="get" class="ipform">
        <div class="ipform">
            <label for="ipAddr">Enter an IP Address: </label>
            <input type="text" name="ipAddr" id="ipAddr" required>
        </div>
        <div class="ipform">
            <label for="mask">Enter the subnet mask: </label>
            <input type="text" name="mask" id="mask" required>
        </div>
        <div class="ipform">
            <input type="submit" value="Submit">
        </div>
    </form>

    <h3> <%= data.categoryName %></h3>

    <ul>
      <% data.categories.forEach((item) => { %>
        <li> <%= item.categoryName %></li>
        <ul>
          <li> <%= item.categoryDescription %></li>
        </ul>
      <% }); %>
    </ul>

    <p><ul>
      <% for(let i=0; i<5; i++) { %>
        <li>i = <%= i %></li>
      <% } %>
    </ul></p>
  </body>
</html>
